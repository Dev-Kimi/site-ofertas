---
import { getCollection } from 'astro:content';
import MainLayout from '../../layouts/MainLayout.astro';

export async function getStaticPaths() {
  const reviews = await getCollection('reviews');
  return reviews.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
const { title, description, image, date, author, rating, summary, price, affiliateLink, category, specs } = entry.data;

// Format date
const formattedDate = new Date(date).toLocaleDateString('pt-BR', {
  day: 'numeric',
  month: 'long',
  year: 'numeric'
});

// Schema.org Product data
const schema = {
  "@context": "https://schema.org/",
  "@type": "Product",
  "name": title,
  "image": image,
  "description": summary,
  "review": {
    "@type": "Review",
    "reviewRating": {
      "@type": "Rating",
      "ratingValue": rating,
      "bestRating": "10"
    },
    "author": {
      "@type": "Person",
      "name": author
    }
  }
};
---

<MainLayout title={`${title} - Review Completo`} description={summary} image={image} schema={schema}>
  <div class="bg-white pb-12">
    {/* Header Section */}
    <div class="bg-gray-900 text-white py-12 md:py-20 relative overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-r from-blue-900 to-gray-900 opacity-90"></div>
      <div class="absolute inset-0 bg-[url('/grid-pattern.svg')] opacity-10"></div>
      
      <div class="container mx-auto px-4 relative z-10">
        <div class="flex flex-col md:flex-row gap-8 items-center">
          <div class="flex-1">
            <div class="flex items-center gap-2 text-blue-300 text-sm font-medium mb-4">
              <a href="/" class="hover:text-white transition">Home</a>
              <span>/</span>
              <a href="/reviews" class="hover:text-white transition">Reviews</a>
              <span>/</span>
              <span class="text-white">{category}</span>
            </div>
            
            <h1 class="text-3xl md:text-5xl font-bold mb-6 leading-tight">{title}</h1>
            
            <div class="flex flex-wrap items-center gap-6 text-gray-300 text-sm">
              <div class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                <span>{author}</span>
              </div>
              <div class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <span>{formattedDate}</span>
              </div>
              <div class="flex items-center gap-1 bg-blue-600 text-white px-3 py-1 rounded-full font-bold">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
                {rating}/10
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="container mx-auto px-4 py-12">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-12">
        {/* Main Content */}
        <div class="lg:col-span-8">
          <div class="rounded-2xl overflow-hidden shadow-lg mb-10">
            <img src={image} alt={title} class="w-full h-auto object-cover" />
          </div>

          <article class="prose prose-lg prose-blue max-w-none text-gray-700">
            <Content />
          </article>
        </div>

        {/* Sidebar */}
        <div class="lg:col-span-4 space-y-8">
          {/* Verdict Card (Sticky) */}
          <div class="bg-white rounded-xl shadow-lg border border-gray-100 p-6 sticky top-24">
            <h3 class="text-xl font-bold text-gray-900 mb-4 border-b pb-2">Veredito</h3>
            
            <div class="flex justify-between items-center mb-6">
              <div class="text-gray-600 font-medium">Nota Final</div>
              <div class="text-4xl font-black text-blue-600">{rating}<span class="text-lg text-gray-400 font-normal">/10</span></div>
            </div>

            <p class="text-gray-600 mb-6 text-sm leading-relaxed">
              {summary}
            </p>

            <div class="mb-6">
              <div class="text-sm text-gray-500 mb-1">Melhor Preço Encontrado</div>
              <div class="text-3xl font-bold text-green-600">{price}</div>
            </div>

            <a 
              href={affiliateLink} 
              target="_blank" 
              rel="noopener noreferrer"
              class="block w-full bg-blue-600 hover:bg-blue-700 text-white text-center font-bold py-4 rounded-lg shadow-md hover:shadow-lg transition transform hover:-translate-y-0.5"
            >
              Ver Oferta na Loja
            </a>
            <p class="text-xs text-gray-400 text-center mt-3">
              *Podemos receber comissão por compras qualificadas.
            </p>
          </div>

          {/* Specs Card */}
          {specs && (
            <div class="bg-gray-50 rounded-xl p-6 border border-gray-200">
              <h3 class="text-lg font-bold text-gray-900 mb-4">Especificações Técnicas</h3>
              <div class="space-y-3">
                {Object.entries(specs).map(([key, value]) => (
                  <div class="flex justify-between border-b border-gray-200 pb-2 last:border-0 last:pb-0">
                    <span class="text-gray-500 text-sm font-medium">{key}</span>
                    <span class="text-gray-900 text-sm font-semibold text-right">{value}</span>
                  </div>
                ))}
              </div>
            </div>
          )}
        </div>
      </div>
    </div>
  </div>
</MainLayout>
